{
  "name": "@rodrigopsasaki/vision-nestjs",
  "type": "module",
  "version": "0.2.2",
  "description": "Advanced NestJS integration for Vision observability with decorators, guards, and dynamic modules",
  "license": "MIT",
  "author": "Rodrigo Sasaki",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigopsasaki/vision.git",
    "directory": "packages/vision-nestjs"
  },
  "bugs": {
    "url": "https://github.com/rodrigopsasaki/vision/issues"
  },
  "homepage": "https://github.com/rodrigopsasaki/vision/tree/main/packages/vision-nestjs#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write .",
    "format:check": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check .",
    "spellcheck": "cspell '**/*.{ts,md,json}'",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vision",
    "nestjs",
    "interceptor",
    "decorator",
    "observability",
    "structured-logging",
    "context",
    "typescript",
    "nodejs",
    "microservices",
    "graphql",
    "websocket"
  ],
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cspell": "^9.1.5",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@rodrigopsasaki/vision": "workspace:*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "rxjs": "^7.8.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/graphql": {
      "optional": true
    },
    "@nestjs/microservices": {
      "optional": true
    },
    "@nestjs/websockets": {
      "optional": true
    }
  }
}
