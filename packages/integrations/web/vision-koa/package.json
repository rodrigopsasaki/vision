{
  "name": "@rodrigopsasaki/vision-koa",
  "type": "module",
  "version": "0.3.1",
  "description": "Elegant Koa middleware for seamless Vision context integration",
  "license": "MIT",
  "author": "Rodrigo Sasaki",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodrigopsasaki/vision.git",
    "directory": "packages/integrations/web/vision-koa"
  },
  "bugs": {
    "url": "https://github.com/rodrigopsasaki/vision/issues"
  },
  "homepage": "https://github.com/rodrigopsasaki/vision/tree/main/packages/vision-koa#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write .",
    "format:check": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check .",
    "spellcheck": "cspell '**/*.{ts,md,json}'",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vision",
    "koa",
    "middleware",
    "observability",
    "structured-logging",
    "context",
    "async-context",
    "monitoring",
    "tracing",
    "typescript",
    "nodejs"
  ],
  "devDependencies": {
    "@rodrigopsasaki/vision": "workspace:*",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.5",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitest/coverage-v8": "^4.0.18",
    "cspell": "^9.7.0",
    "eslint": "^9.39.3",
    "eslint-plugin-import": "^2.32.0",
    "koa": "^2.16.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "micromatch": "^4.0.8"
  },
  "peerDependencies": {
    "@rodrigopsasaki/vision": "0.3.1",
    "koa": "^2.0.0"
  }
}
