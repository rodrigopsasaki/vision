{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "express",
        "fastify",
        "koa",
        "nestjs",
        "typeorm",
        "prisma",
        "datadog",
        "examples",
        "deps",
        "release"
      ]
    ]
  }
}